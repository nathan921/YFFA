<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_margin="16dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_team_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textSize="16sp"
        android:text="Multiple Scorgasms"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_team_owner"
        android:layout_below="@id/home_team_name"
        android:layout_alignLeft="@+id/home_team_name"
        android:text="Whitney"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_team_score"
        android:layout_below="@id/home_team_owner"
        android:layout_alignLeft="@id/home_team_owner"
        android:text="102.54"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="vs"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/away_team_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:text="The Golden Taints"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/away_team_owner"
        android:layout_below="@id/away_team_name"
        android:layout_alignRight="@+id/away_team_name"
        android:text="Joe"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/away_team_score"
        android:layout_below="@id/away_team_owner"
        android:layout_alignRight="@id/away_team_owner"
        android:text="102.54"
        />
</RelativeLayout>